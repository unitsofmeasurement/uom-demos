// convenience utils for using Units of Measurement

public Quantity<?> q(String s) {
	return Quantities.getQuantity(s);
}

@SuppressWarnings({"unchecked", "rawtypes"})
public Quantity q(Number n, Unit u) {
	return Quantities.getQuantity(n, u);
}

@SuppressWarnings({"unchecked", "rawtypes"})
public Quantity add(Quantity a, Quantity b) {    
	return a.add(b);
}

@SuppressWarnings({"unchecked", "rawtypes"})
public Quantity sub(Quantity a, Quantity b) {
	return a.subtract(b);
}

public Quantity<?> mult(Quantity<?> a, Quantity<?> b) {
	return a.multiply(b);
}